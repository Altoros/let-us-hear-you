doctype html
html
  head
    link(rel='stylesheet', href='home.css')
  body
    .header
      .thin Let Us
      .bold Hear You

    - resources.forEach(function(feedback) {
      .feedback
        .feedback__heading= feedback.content.substr(0, 35) + '...'
        .feedback__details
          .accent= feedback.status
          .misc= 'since ' + new Date(feedback.timestamp)
        .feedback__content= feedback.content
    - })

    form.feedback-form(action='/feedback', method='post', enctype='multipart/form-data')
      textarea.feedback-form__content(name='content', rows='10')
      input.feedback-form__audio(type='file', name='audio')
      button.feedback-form__submit.button(type='submit') Import Feedback
